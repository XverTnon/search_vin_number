#:import NoTransition kivy.uix.screenmanager.NoTransition

<Screens>:
    transition: NoTransition()
    MainScreen:
    ShowCarsBrandsScreen:
    ShowBrandModelsScreen:
    ShowVINNumber:


<MainScreen>:
    name: "mainscreen"
    AnchorLayout:
        anchor_y: "top"

        MDToolbar:
            title: "Поиск VIN номера авто"
            anchor_title: "left"

    AnchorLayout:
        anchor_y: "center"

        MDRaisedButton:
            text: "Начать"
            on_release: app.root.current = "showcarsbrands"
            focus_behavior: True
            ripple_behavior: True
            md_bg_color: 0.13, 0.59, 0.95, 1
            font_size: "18sp"
            size_hint: .5, None

    AnchorLayout:
        anchor_y: "bottom"

        MDToolbar:
            title: "Разработчик - ScoOB[?!]"
            anchor_title: "center"

<ShowCarsBrandsScreen>:
    name: "showcarsbrands"
    input_search_cars_brands: Input_Search_Cars_Brands
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        MDToolbar:
            title: "Поиск VIN номера авто"
            anchor_title: "left"

        MDTextField:
            id: Input_Search_Cars_Brands
            hint_text: "Выберите марку авто"
            pos_hint: {"center_x": .5}
            size_hint: .5, None
            #mode: "rectangle"
            on_text: root.Input_Cars_Brands()

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ["content"]
            pos_hint: {"center_x": .5}
            MDBoxLayout:
                id: result_car_brands
                #cols: 1
                orientation: "vertical"

                spacing: "5dp"
                padding: "10dp"
                size_hint_y: None
                minimum_height: self.height
                height: self.minimum_height


<SearchResultItemCarBrands>:
    focus_behavior: True
    ripple_behavior: True
    size_hint_y: None
    size_hint_x: None
    pos_hint: {"center_x": .5}
    on_release: root.SearchResultItemCarBrands_NextScreen(root.marker)

<ShowBrandModelsScreen>:
    name: "showbrandmodels"
    input_search_brand_models: Input_Search_Brand_Models
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        MDToolbar:
            title: "Поиск VIN номера авто"
            anchor_title: "left"

        MDTextField:
            id: Input_Search_Brand_Models
            hint_text: "Выберите модель авто"
            pos_hint: {"center_x": .5}
            size_hint: .55, None
            #mode: "rectangle"
            on_text: root.Input_Brand_Model()
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ["content"]
            MDGridLayout:
                id: result_brand_models
                cols: 1
                spacing: "5dp"
                padding: "10dp"
                size_hint_y: None
                row_default_height: "40dp"
                height: self.minimum_height
        OneLineListItem:
            text: "<< Назад"
            on_release: root.ShowBrandModelsScreen_Back()

<SearchResultBrandModels>:
    focus_behavior: True
    size_hint_x: 1
    on_release: root.SearchResultBrandModels_NextScreen(root.marker)

<ShowModelEquipmentScreen>:
    name: "showmodelequipment"
    input_search_model_equipment: Input_Search_Model_Equipment
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        MDToolbar:
            title: "Поиск VIN номера авто"
            anchor_title: "left"

        MDTextField:
            id: Input_Search_Model_Equipment
            hint_text: "Выберите комплектацию авто"
            pos_hint: {"center_x": .5}
            size_hint: .55, None
            #mode: "rectangle"
            on_text: root.Input_Model_Equipment()
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ["content"]
            MDGridLayout:
                id: result_model_equipment
                cols: 1
                spacing: "5dp"
                padding: "10dp"
                size_hint_y: None
                row_default_height: "40dp"
                height: self.minimum_height
        OneLineListItem:
            text: "<< Назад"
            on_release: root.ShowModelEquipmentScreen_Back()

<SearchResultModelEquipment>:
    focus_behavior: True
    size_hint_x: 1
    on_release: root.SearchResultModelEquipment_NextScreen(root.marker)

<ShowVINNumber>:
    name: "showvinnumber"
    MDLabel:
        text: "Тут какая то инфа,\nи фотки где находится VIN"
        halign: "center"

